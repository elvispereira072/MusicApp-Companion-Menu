                android:text="Price: R$ 800.00"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/productDiscount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: 15%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/discountedPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discounted price: R$ 680.00"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/buyButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar Agora"
                    android:background="@drawable/cta_button_background"
                    android:textColor="#FF5722"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/addToCartButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar ao Carrinho"
                    android:background="@drawable/cta_button_background"
                    android:textColor="#ffffff"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/shareIcon2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_share"
                    android:contentDescription="Share Icon"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:id="@+id/ratingStar2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Rating Star"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Terceiro LinearLayout -->
